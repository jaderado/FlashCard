<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To get started Login or Register:"
        android:id="@+id/textlogin"
        android:textSize="25dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/usernametxt"
        android:paddingTop="50dp"
        android:text="Username"
        android:textSize="25sp"
        android:layout_above="@+id/passwordtxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"

        android:ems="10"
        android:id="@+id/passwordtxt"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Password"
        android:textSize="25sp"
        android:paddingTop="15dp"
        android:paddingRight="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Loginkbtn"
        android:layout_marginTop="46dp"
        android:text="Login"
        android:onClick="userLogin"
        android:layout_below="@+id/passwordtxt"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/register1btn"
        android:onClick="userReg"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/Loginkbtn"
        android:layout_alignStart="@+id/Loginkbtn"
        android:layout_marginBottom="52dp" />
</RelativeLayout>